<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>

        <item name="windowNoTitle">true</item>
    </style>


    <style name="CustomActionBar" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/half_grey</item>
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>

            <item name="android:windowShowWallpaper">true</item>
            <item name="android:windowBackground">@android:color/transparent</item>

    </style>


    <style name="SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textColorPrimary">@color/yellow_dim</item>
        <item name="android:textColorSecondary">@color/grey_light</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@color/dim</item>


        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>

    </style>
</resources>
